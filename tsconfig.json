{
  "compilerOptions": {
    "outDir": "./out",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
