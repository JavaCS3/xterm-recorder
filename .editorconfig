# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[{*.groovy,*.jenkinsfile,*.Jenkinsfile,Jenkinsfile}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
